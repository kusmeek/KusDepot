<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Main">

        <OutputType>Exe</OutputType>

        <Platforms>AnyCPU;x64</Platforms>

        <TargetFramework>net10.0</TargetFramework>

        <AssemblyName>KusDepot.DaprWorker</AssemblyName>

        <IsServiceFabricServiceProject>True</IsServiceFabricServiceProject>

    </PropertyGroup>

    <PropertyGroup Label="Analysis">

        <EnableTrimAnalyzer>False</EnableTrimAnalyzer>

        <NoWarn>CA1031;CA1812;CA1849;CA2007;IDE0052</NoWarn>

    </PropertyGroup>

    <PropertyGroup Label="ConfigEx">

        <GenerateDocumentationFile>False</GenerateDocumentationFile>

    </PropertyGroup>

    <ItemGroup Label="Settings">

        <None Update="appsettings.json">

            <CopyToOutputDirectory>Always</CopyToOutputDirectory>

        </None>

    </ItemGroup>

    <ItemGroup>

        <PackageReference Include="Dapr.Workflow" />

        <PackageReference Include="Dapr.Actors.AspNetCore" />

        <PackageReference Include="Microsoft.ServiceFabric.Services" />

        <PackageReference Include="Serilog" />

        <PackageReference Include="Serilog.AspNetCore" />

        <PackageReference Include="Serilog.Sinks.File" />

        <ProjectReference Include="..\DaprActors\DaprActors.csproj" />

        <ProjectReference Include="..\KusDepot.Objects\KusDepot.Objects.csproj" />

        <ProjectReference Include="..\KusDepot.Onlines\KusDepot.Onlines.csproj" />

    </ItemGroup>

</Project>