<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup Label="Main">

        <StartAction>Program</StartAction>

        <TargetFramework>net10.0</TargetFramework>

    </PropertyGroup>

    <PropertyGroup Label="ConfigEx">

        <StartProgram>node</StartProgram>

        <DockerfileContext>.</DockerfileContext>

        <DockerfileTag>kusdepotreactn</DockerfileTag>

        <StartArguments>target/StartUp.js</StartArguments>

        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>

    </PropertyGroup>

    <ItemGroup Label="Packages or Projects">

        <PackageReference Include="Microsoft.TypeScript.MSBuild">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>

    </ItemGroup>

    <Target Name="CopyShapeApiProto" BeforeTargets="Build">

        <Copy SourceFiles="..\ReactG\shapeapi\shapeapi.proto" DestinationFolder="proto\" />

    </Target>

    <Target Name="NpmInstall" BeforeTargets="CoreCompile">

        <Exec Command="npm install" WorkingDirectory="$(ProjectDir)" />

    </Target>

    <Target Name="NpmBuild" AfterTargets="Build">

        <Exec Command="npm run build" WorkingDirectory="$(ProjectDir)" />

    </Target>

    <ItemGroup Label="Packages or Projects">

        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" />

    </ItemGroup>

</Project>