<?xml version = "1.0" encoding = "utf-8" ?>

<Activity>

    <class name = "Activity">

        <main>

            <summary>Task Tracking.</summary>

            <remarks>Activities monitor the state of command execution. Should be removed from attached Tool by originating Command.</remarks>

        </main>

        <field name = "handle" Cref = "String?">

            <summary>Execution Handle.</summary>

            <remarks>Private Backing Field.</remarks>

        </field>

        <field name = "id" Cref = "Guid?">

            <summary>Identifier.</summary>

            <remarks>Private Backing Field.</remarks>

        </field>

        <field name = "progress" Cref = "IProgress?">

            <summary>Progress monitor.</summary>

            <remarks>Private Backing Field.</remarks>

        </field>

        <field name = "started" Cref = "DateTimeOffset?">

            <summary>When this Activity began.</summary>

            <remarks>Private Backing Field.</remarks>

        </field>

        <field name = "task" Cref = "Task{Object?}">

            <summary>Generated by ExecuteAsync.</summary>

            <remarks>Private Backing Field.</remarks>

        </field>

        <field name = "token" Cref = "CancellationToken?">

            <summary>Cancellation Token.</summary>

            <remarks>Private Backing Field.</remarks>

        </field>

        <property name = "Handle" Cref = "String?">

            <summary>Execution Handle.</summary>

        </property>

        <property name = "ID" Cref = "Guid?">

            <summary>Identifier.</summary>

        </property>

        <property name = "Progress" Cref = "IProgress?">

            <summary>Progress monitor.</summary>

        </property>

        <property name = "Started" Cref = "DateTimeOffset?">

            <summary>When this Activity began.</summary>

        </property>

        <property name = "Task" Cref = "Task{Object?}">

            <summary>Generated by ExecuteAsync.</summary>

        </property>

        <property name = "Token" Cref = "CancellationToken?">

            <summary>Cancellation Token.</summary>

        </property>

        <constructor name = "Constructor">

            <summary>Constructor.</summary>

            <param name = "task" Cref = "Task{Object?}">Task.</param>

            <param name = "handle" Cref = "String?">Handle.</param>

            <param name = "id" Cref = "Guid?">Identifier.</param>

            <param name = "started" Cref = "DateTimeOffset?">Started.</param>

            <param name = "progress" Cref = "IProgress{Object}?">Progress.</param>

            <param name = "token" Cref = "CancellationToken?">Cancellation Token.</param>

        </constructor>

    </class>

</Activity>