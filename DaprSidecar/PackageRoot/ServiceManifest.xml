<?xml version="1.0" encoding="utf-8"?>
<ServiceManifest Name="DaprSidecarPkg"
                 Version="0.0.1"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric"
                 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ServiceTypes>    
    <StatelessServiceType ServiceTypeName="DaprSidecarType" />
  </ServiceTypes>

  <CodePackage Name="Code" Version="0.0.1">
    <EntryPoint>
      <ExeHost>
        <Program>KusDepot.DaprSupervisor.exe</Program>
        <ConsoleRedirection FileRetentionCount="10" />
      </ExeHost>
    </EntryPoint>
  </CodePackage>

  <ConfigPackage Name="Config" Version="0.0.1" />

  <Resources>
    <Endpoints>
      <Endpoint Name="ServiceEndpoint" />
    </Endpoints>
  </Resources>
</ServiceManifest>