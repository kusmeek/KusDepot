<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup Label="Main">

        <StartAction>Program</StartAction>

        <TargetFramework>net10.0</TargetFramework>

    </PropertyGroup>

    <PropertyGroup Label="Analysis">

        <NoWarn></NoWarn>

    </PropertyGroup>

    <PropertyGroup Label="ConfigEx">

        <StartProgram>py</StartProgram>

        <DockerfileContext>.</DockerfileContext>

        <DockerfileTag>kusdepotreactp</DockerfileTag>

        <StartArguments>-m reactp.main</StartArguments>

        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>

    </PropertyGroup>

    <Target Name="CopyShapeApiProto" BeforeTargets="Build" Condition="'$(ContainerBuild)' != 'true'">

        <Copy SourceFiles="..\ReactG\shapeapi\shapeapi.proto" DestinationFolder="proto\" />

    </Target>

    <ItemGroup Label="Packages or Projects">

        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" />

    </ItemGroup>

</Project>